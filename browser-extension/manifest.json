{
  "manifest_version": 2,
  "name": "Obsidian Media Companion",
  "version": "1.0.0",
  "description": "Save images from the web to your Obsidian vault via the Media Companion plugin.",

  "permissions": [
    "contextMenus",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Save to Obsidian"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "media-companion@obsidian",
      "strict_min_version": "109.0"
    }
  }
}
